.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.box {
  position: relative;
  background-color: #fff;
  border-radius: 6px;
  width: 100%;
  margin-bottom: 10px;
  /* padding: 5px; */
}

.box-header {
  color: #596c8e;
  margin-left: 10px;
  font-size: 12px;

}

.box-container {
  display: block;
}


